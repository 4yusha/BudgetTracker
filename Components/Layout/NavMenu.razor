@inject NavigationManager NavigationManager


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BudgetTracker</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href= "dashboard">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="alltransactions">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span>Transaction
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="mydebt">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>Debts
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cashin">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>Cash In
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cashout">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span>Cash Out
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <button class="nav-link btn btn-link text-start px-0" @onclick="Logout">
                <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
            </button>
        </div> 
    </nav>
</div>

@code {
    private void Logout()
    {
        NavigationManager.NavigateTo("/"); // Redirect to login page
    }
}
